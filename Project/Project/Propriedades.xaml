<Page x:Class="Project.Propriedades"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Propriedades">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <m:Map Grid.Column="1" Grid.RowSpan="3" Name="myMap" Center="40.6393791,-8.6621375" ZoomLevel="10"
               CredentialsProvider="BING_MAPS_KEY" Mode="Road">
        </m:Map>

        <Button Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" >
            <StackPanel Orientation="Horizontal" >
                <!--<Image Source="images/home.png" />-->
                <TextBlock Text="Voltar à Página Inicial" VerticalAlignment="Center" />
            </StackPanel>
        </Button>


    </Grid>
</Page>
